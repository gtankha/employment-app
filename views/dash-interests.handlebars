<div class="hero d-flex justify-content-center">
    <div class="card mt-5 more-round shadow" style="width: 18rem; margin: 10px">

            <div class="p-4 d-flex justify-content-center more-round">
              {{#if company}}    
                <h5 class="card-title signup_heading">{{session.company_name}}</h5>
                
                {{else}}
                 <h5 class="card-title signup_heading">{{session.full_name}}</h5>
                {{/if}}
            </div>
            <div class="card-body d-flex align-items-center flex-column">
              {{#if session.image}}
                <img src="{{session.image}}" width='100' height='100'/><br>
              
              {{else}}
              <span class="fa display-1">&#xf007;</span>
              {{/if}}
                <div class="card-text text-center"><b>Description</b>:<br><p class="text-break text-center">{{session.description}}</p></div>
                <button type="button" id="edit-btn" class="btn btn-secondary"><span class="fa">&#xf4ff;</span>Edit Profile</button>
            </div>
        </div>

</div>


